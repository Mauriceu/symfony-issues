<div {{ attributes }}>

    <h2>Without Serializer</h2>
    <label for="fromDate">From:</label>
    <input
        id="fromDate"
        type="date"
        value="{{ from.format('Y-m-d') }}"
        data-loading="addAttribute(disabled)"
        data-model="from"
        min="2024-01-01"
        max="2025-01-01"
    />

    <p>
        Current "from" value: {{ from.format('Y-m-d') }}
    </p>

    <label for="toDate">To:</label>
    <input
            id="toDate"
            type="date"
            value="{{ to.format('Y-m-d') }}"
            data-loading="addAttribute(disabled)"
            data-model="to"
            min="2024-01-01"
            max="2025-01-01"
    />

    <p>
        Current "to" value: {{ to.format('Y-m-d') }}
    </p>


    <br>
    <br>

    <h2>With Serializer</h2>
    <label for="fromDateWithSerializer">From:</label>
    <input
            id="fromDateWithSerializer"
            type="date"
            value="{{ fromWithSerializer.format('Y-m-d') }}"
            data-loading="addAttribute(disabled)"
            data-model="fromWithSerializer"
            min="2024-01-01"
            max="2025-01-01"
    />

    <p>
        Current "fromWithSerializer" value: {{ fromWithSerializer.format('Y-m-d') }}
    </p>

    <label for="toDateWithSerializer">To:</label>
    <input
            id="toDateWithSerializer"
            type="date"
            value="{{ toWithSerializer.format('Y-m-d') }}"
            data-loading="addAttribute(disabled)"
            data-model="toWithSerializer"
            min="2024-01-01"
            max="2025-01-01"
    />

    <p>
        Current "toWithSerializer" value: {{ toWithSerializer.format('Y-m-d') }}
    </p>
</div>